<% if @project.errors.any? %>
<section id="errors">
	<header>
		<h2>
			Ooops! The project <%= @project.name %> could not be saved!
		</h2>
		<h3>
			Please correct the following <%= pluralize @project.errors.count, 'error' %>
		</h3>
	</header>
	<ul>
		<% @project.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>

</section>

<% end %>