<h1>My project</h1>

<article>
  <h1><%= @project[:name] %></h1>
  <p><%= @project[:description] %></p>
  <table style="text-align: left;">
    <tbody>
      <tr>
        <th>Pledge:</th>
        <td><%= number_to_currency(@project[:target_pledge_amount]) %></td>
      </tr>
      <tr>
        <th>Website:</th>
        <td><%= @project[:website] %></td>
      </tr>
      <tr>
        <th>Ends on:</th>
        <td><%= time_from_now(@project) %></td>
      </tr>
    </tbody>
  </table>
</article>

<p><%= link_to "All projects", projects_path %> | <%= link_to "Edit", edit_project_path(@project) %></p>
