<div class="main">
  <h1><%= pluralize(@projects.count, 'Project') %></h1>

  <%= link_to 'Add New Project', new_project_path %>
  <div class="container">
    <% @projects.each do |project| %>
      <article>
        <h1><%= link_to project[:name], project_path(project.id) %></h1>
        <p><%= truncate(project[:description], length: 150, separator: ' ') %></p>
        <table style="text-align: left;">
          <tbody>
            <tr>
              <th>Pledge:</th>
              <td><%= number_to_currency(project[:target_pledge_amount]) %></td>
            </tr>
            <tr>
              <th>Website:</th>
              <td><%= project[:website] %></td>
            </tr>
            <tr>
              <th>Ends on:</th>
              <td><%= time_from_now(project) %></td>
            </tr>
          </tbody>
        </table>
      </article>
    <% end %>
  </div>
</div>