<ul id="projects">
  <% @projects.each do |project| %>
    <li>
      <article class="project">
        <header>
          <%= image_for project %>
          <h2><%= link_to project[:name], project_path(project.id) %></h2>
        </header>
        <p><%= truncate(project[:description], length: 150, separator: ' ') %></p>
        <table style="text-align: left;">
          <tbody>
            <tr>
              <th>Pledging ends:</th>
              <td><%= format_pledging_ends_on(project) %></td>
            </tr>
            <tr>
              <th>Target amount:</th>
              <td><%= number_to_currency(project[:target_pledge_amount]) %></td>
            </tr>     
          </tbody>
        </table>
      </article>
    </li>
  <% end %>
</ul>